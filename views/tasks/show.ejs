<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs") %>
    <body>
        <%- include("../partials/nav.ejs") %>
        <h1><%= task.name %></h1>
        <% if(task.description) {%>
        <p><b>Task Description: </b><%= task.description %></p>
        <% } %> <% if(task.completed) {%>
        <p><b>Completed</b></p>
        <% } else { %>
        <p><b>Not Completed</b></p>
        <% } %>
        <a href="/tasks/<%= task.id %>/edit">Edit</a>
        <form action="/tasks/<%= task.id %>?_method=DELETE" method="POST">
            <button>Delete</button>
        </form>
        <% if(task.deadline) {%>
        <p><b>Deadline: </b><%= task.deadline_yyyy_mm_dd %></p>
        <% } %> <% if(task.priority) {%>
        <p><b>Task Priority: </b><a href="/priorities/<%= task.priority.id %>"><%= task.priority.name %></a></p>
        <% } %>
        <p><b>Task Project: </b><a href="/projects/<%= task.project.id %>"><%= task.project.name %></a></p>
        <p><b>Created: </b><%= task.createdAt_yyyy_mm_dd %></p>
        <p><b>Last Updated: </b><%= task.updatedAt_yyyy_mm_dd %></p>
    </body>
</html>
